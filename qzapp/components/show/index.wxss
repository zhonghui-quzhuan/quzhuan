/* components/show/index.wxss */

.container {
  width: 750rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.title {
  display: flex;
  width: 714rpx;
  height: 48rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.title-box {
  display: flex;
  color: #000;
  font-size: 32rpx;
  flex-direction: row;
  align-items: center;
}

.title-img {
  width: 34rpx;
  height: 34rpx;
  margin-right: 12rpx;
}

.right {
  width: 20rpx;
  height: 24rpx;
}

.main {
  width: 710rpx;
  height: 240rpx;
  overflow: hidden;
  border-radius: 10rpx;
  margin: 16rpx auto 41rpx;
}

.main-img {
  width: 710rpx;
  height: 240rpx;
}

.list {
  display: flex;
  width: 714rpx;
  height: 368rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.minor {
  width: 224rpx;
  height: 368rpx;
  display: flex;
  border-radius: 10rpx;
  flex-direction: column;
  box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.1);
}

.minor-img {
  width: 224rpx;
  height: 224rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.minor-text {
  width: 202rpx;
  height: 56rpx;
  margin: 0 auto;
  font-size: 22rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(51, 51, 51, 1);
}

.price {
  display: flex;
  color: #eb0000;
  font-size: 22rpx;
  flex-direction: row;
  margin: 40rpx 0 0 11rpx;
}

.red::first-letter {
  font-size: 20rpx;
}
