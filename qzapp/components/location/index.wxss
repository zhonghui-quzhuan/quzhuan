/* components/location/index.wxss */

.container {
  top: 0;
  left: 0;
  z-index: 99;
  width: 750rpx;
  height: 100vh;
  position: fixed;
  background: #fff;
} 

.search {
  width: 750rpx;
  height: 104rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input {
  width: 580rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 30rpx;
  margin: 0 20rpx 0 22rpx;
  box-shadow:0 0 20rpx 0 rgba(0, 0, 0, .06);
}

.input-img {
  width: 40rpx;
  height: 40rpx;
  margin: 0 24rpx 0 14rpx;
}

.keywords{
  width: 478rpx;
  height: 60rpx;
}

.btn{
  margin: 0;
  padding: 0;
  width: 96rpx;
  height: 60rpx;
  color: #333;
  font-size: 28rpx;
  background: none;
  line-height: 60rpx;
}

.selected{
  width: 710rpx;
  height: 80rpx;
  padding: 0 20rpx;
  line-height: 68rpx;
}

.location{
  width: 710rpx;
  height: 160rpx;
  display: flex;
  padding: 0 20rpx;
  background: #f9f9f9;
  flex-direction: column;
  border-bottom: 1px solid #eee;
}

.location .title{
  width: 710rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  color: rgba(0, 0, 0, 0.5);
}

.result{
  height: 68rpx;
  color: #ecb723;
  font-size: 28rpx;
  max-width: 380rpx;
  background: #fff;
  border-radius: 12rpx;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}


.result-img{
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

/**
 * 分类
 */
 
.sort{
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

.keywords{
  width: 702rpx;
  height: 68rpx;
  display: flex;
  color: #555;
  padding: 0 24rpx;
  align-items: center;
  background: #f9f9f9;
}

.sort-list{
  width: 710rpx;
  height: 96rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  line-height: 96rpx;
  border-bottom: 1px solid #eee;
}