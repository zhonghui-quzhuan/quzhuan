/* ------------ app.wxss 公共WXSS样式 ------------ */
/* @navigator =>hover-class="none"添加此属性即可去除点击时背景色
 * @button =>hover-class="btn-hover" 添加此属性即可去除点击时背景色
 */
@import "./utils/animation.wxss";
page{
  display: flex;
  font-size: 24rpx;
  align-items: center;
  flex-direction: column;
  font-family: "微软雅黑";
}

navigator:hover{
  background: none;
}

button{
  margin: 0;
  padding: 0;
  border-radius: 0;
  background: none;
}

button::after{
  border: 0;
}

/* ----- Flex 布局 ----- */
.flex{
  display: flex;
}

.text_align {
  text-align: center;
}

.inline_block {
  display: inline-block;
}

.inline_flex {
  display: inline-flex;
}

.row {
  flex-direction: row;
}

.column {
  flex-direction: column;
}

.wrap {  
  flex-wrap: wrap;
}

.nowrap {
  flex-wrap: nowrap;
}

.center{
  justify-content: center;
  align-items: center;
}

.justify_content {
  justify-content: center;
}

.justify_content_start {
  justify-content: flex-start;
}

.justify_content_end {
  justify-content: flex-end;
}

.justify_content_sb {
  justify-content: space-between;
}

.justify_content_sa {
  justify-content: space-around;
}

.align_items {
  align-items: center;
}

.align_items_start {
  align-items: flex-start;
}

.align_items_end {
  align-items: flex-end;
}

.align_items_baseline {
  align-items: baseline;
}

.align_content {
  align-content: center;
}

.align_content_start {
  align-content: flex-start;
}

.align_content_end {
  align-content: flex-end;
}

.align_content_stretch {
  align-content: stretch;
}

.align_content_sa {
  align-content: space-around;
}

.align_content_sb {
  align-content: space-between;
}

.order_small {
  order: unset;
}

.order_big {
  order: initial;
}

.align_self {
  align-self: center;
}

.align_self_start {
  align-self: flex-start;
}

.align_self_end {
  align-self: flex-end;
}

.align_self_baseline {
  align-self: baseline;
}

/* ----- 定位 ----- */

.fixed {
  position: fixed;
}

.relative {
  position: relative;
}

.absolute {
  position: absolute;
}

